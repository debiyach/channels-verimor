{
    "name": "laravel-notification-channels/verimor",
    "description": "Verimor Notification Channel for Laravel",
    "homepage": "https://github.com/laravel-notification-channels/:package_name",
    "license": "MIT",
    "authors": [
        {
            "name": "Ömer Faruk GÖL",
            "email": "farukomer.gol@gmail.com",
            "homepage": "https://debiyach.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "illuminate/notifications":  "^7.0 || ^8.0 || ^9.0 || ^10.0",
        "illuminate/support":  "^7.0 || ^8.0 || ^9.0 || ^10.0",
        "illuminate/http":  "^7.0 || ^8.0 || ^9.0 || ^10.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Verimor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\Verimor\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "NotificationChannels\\Verimor\\VerimorServiceProvider"
            ]
        }
    }
}
